    "multi_agent_orchestration": {
      "name": "Multi-Agent AI System",
      "description": "Orchestrated system of specialized AI agents working together to solve complex tasks",
      "complexity": "High",
      "primary_use_cases": ["Complex automation", "Multi-step workflows", "Customer service routing", "Research assistants"],
      "orchestration_patterns": [
        {
          "pattern": "Sequential",
          "description": "Agents process in pipeline order, each building on previous output",
          "best_for": "Document processing workflows, approval chains"
        },
        {
          "pattern": "Concurrent",
          "description": "Multiple agents process same input in parallel, results aggregated",
          "best_for": "Analysis requiring multiple perspectives, ensemble decisions"
        },
        {
          "pattern": "Handoff",
          "description": "Dynamic delegation based on task requirements",
          "best_for": "Customer support triage, specialized routing"
        },
        {
          "pattern": "Group Chat",
          "description": "Agents collaborate through discussion to reach consensus",
          "best_for": "Decision making, brainstorming, validation"
        },
        {
          "pattern": "Magentic",
          "description": "Manager agent dynamically builds and refines task ledger",
          "best_for": "Open-ended problems, incident response"
        }
      ],
      "azure_services": [
        {"service": "Azure AI Foundry", "purpose": "Agent development and hosting", "tier": "Standard"},
        {"service": "Azure OpenAI Service", "purpose": "LLM backbone", "tier": "Standard"},
        {"service": "Azure AI Agent Service", "purpose": "Agent orchestration", "tier": "Preview"}
      ],
