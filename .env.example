# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_RESOURCE_GROUP=rg-responsible-ai-agent
AZURE_LOCATION=eastus

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure Key Vault
AZURE_KEY_VAULT_NAME=kv-responsible-ai
AZURE_KEY_VAULT_URI=https://kv-responsible-ai.vault.azure.net/

# Cosmos DB
COSMOS_DB_ENDPOINT=https://your-cosmos.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-key
COSMOS_DB_DATABASE_NAME=ResponsibleAIDB
COSMOS_DB_CONTAINER_NAME=AIReviews

# Blob Storage
STORAGE_ACCOUNT_NAME=stresponsibleai
STORAGE_ACCOUNT_KEY=your-storage-key
STORAGE_CONTAINER_REPORTS=reports
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Microsoft Graph API
GRAPH_API_TENANT_ID=your-tenant-id
GRAPH_API_CLIENT_ID=your-client-id
GRAPH_API_CLIENT_SECRET=your-client-secret
GRAPH_API_SCOPE=https://graph.microsoft.com/.default

# Application Settings
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:7071
ALLOWED_ORIGINS=http://localhost:3000,https://your-teams-app.azurewebsites.net

# Email Configuration
EMAIL_FROM=noreply@microsoft.com
EMAIL_SUBJECT_PREFIX=[Responsible AI Review]

# Microsoft Entra ID (for authentication)
ENTRA_CLIENT_ID=your-app-registration-client-id
ENTRA_TENANT_ID=your-tenant-id
ENTRA_CLIENT_SECRET=your-client-secret

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PDF_REPORTS=true
ENABLE_TEAMS_INTEGRATION=true
